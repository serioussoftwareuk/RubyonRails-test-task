<div class="container show-page-container">
  <div class="row">
    <div class="col">
      <div class="panel panel-primary ">
        <div class="panel-heading">
          <h3 class="panel-title">
            <span class="glyphicon glyphicon-map-marker"></span>
            <%= @location.address %>
          </h3>
        </div>
        <div class="panel-body">
          <% if @location.geocoded? %>
            <%= content_tag(:iframe, '', src: "https://www.google.com/maps/embed/v1/place?q=#{@location.latitude},#{@location.longitude}&key=#{ENV['GOOGLE_MAPS_KEY']}", width: '100%', height: 500, frameborder: 0) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
